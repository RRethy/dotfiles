[user]
    name = Adam P. Regasz-Rethy
    email = adam.regaszrethy@shopify.com
[core]
    editor = nvim
    excludesfile = ~/.config/git/gitignore_global
    commitGraph = true
[commit]
    verbose = true
[push]
    default = current
[pull]
    rebase = true
[rerere]
    enabled = true
[merge]
    tool = fugitive
    conflictStyle = diff3
[mergetool "fugitive"]
    cmd = nvim -f -c "Gdiff" "$MERGED"
[diff]
    tool = nvimdiff
    algorithm = patience
[difftool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE
    trustExitCode = true
[feature]
    manyFiles = true
[alias]
    co = checkout
    st = status
    up = fetch --all
    b  = branch --sort=committerdate
    pls = push --force-with-lease
    cc = !git add -A && git commit -av
    ca = !git add -A && git commit --amend -av
    cas = !git add -A && git commit --amend --no-edit
    foor = branch
    rn = "!f() { git branch -m $1; }; f"
    rh = reset --hard
    rhu = reset --hard @{u}
    cp = cherry-pick
    cob = !git checkout $(git branch --sort=committerdate | fzf)
    d = diff --cached --diff-algorithm=minimal
[gc]
    writeCommitGraph = true
[protocol]
    version = 2
[url "https://github.com/Shopify/"]
    insteadOf = git@github.com:Shopify/
    insteadOf = git@github.com:shopify/
    insteadOf = ssh://git@github.com/Shopify/
    insteadOf = ssh://git@github.com/shopify/
[credential]
    helper =
    helper = store --file /opt/dev/var/private/git_credential_store
    helper = spin-github
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
